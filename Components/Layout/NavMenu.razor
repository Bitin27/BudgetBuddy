@using Microsoft.AspNetCore.Components.Routing
@inject AuthState AuthState
@inject NavigationManager Navigation

@if (AuthState.IsAuthenticated)
{
    <div class="top-row ps-3 navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="">BudgetBuddy</a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />

    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav class="d-flex flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link text-white" href="/dashboard" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link text-white" href="/transaction">
                    <span class="bi bi-cash-stack-nav-menu" aria-hidden="true"></span> Transaction
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link text-white" href="/debt">
                    <span class="bi bi-collection-nav-menu" aria-hidden="true"></span> Debt
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <button class="nav-link text-white border-0 bg-transparent" @onclick="HandleLogout">
                    <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                </button>
            </div>
        </nav>
    </div>
}

@code {
    private void HandleLogout()
    {
        AuthState.Logout();
        Navigation.NavigateTo("/", true);
    }
}