@page "/"
@inject NavigationManager Navigation

<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        font-weight: bold;
    }

    .currency-dropdown {
        width: 100%;
    }

    .btn-primary {
        width: 100%;
    }

    .header {
        text-align: center;
        margin-bottom: 20px;
    }
</style>

<div class="login-container">
    <div class="header">
        <h2>Login</h2>
    </div>

    <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Username:</label>
            <InputText id="username" class="form-control" @bind-Value="loginModel.Username" />
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" />
        </div>

        <div class="form-group">
            <label for="currency">Currency:</label>
            <InputSelect id="currency" class="form-control currency-dropdown" @bind-Value="selectedCurrency">
                <option value="NPR">NPR</option>
                <option value="USD">USD</option>
                <option value="EURO">EURO</option>
            </InputSelect>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </EditForm>
</div>

@code {
    private LoginModel loginModel = new LoginModel();
    private string selectedCurrency = "NPR"; // Default currency

    private void HandleLogin()
    {
        // Perform login logic (authentication)
        if (loginModel.Username == "bitin" && loginModel.Password == "1234") // Dummy check
        {
            Console.WriteLine($"Logged in with currency: {selectedCurrency}");
            Navigation.NavigateTo("/dashboard");
        }
        else
        {
            Console.WriteLine("Wrong username or password");
        }
    }

    public class LoginModel
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }
}
